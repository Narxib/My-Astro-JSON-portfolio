---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/sections/Header.jsx";
import Aboutme from "@/components/Aboutme.astro";
import Work from "@/components/sections/Work.astro";
import Knowledge from "@/components/sections/Knowledge.astro";
import Projects from "@/components/Projects.astro";
import Settings from "@/components/Settings.jsx";
import "../../layouts/styles.css";
import UpdateTheme from "@/components/sections/UpdateTheme.astro";
import cv from "@/cv_en.json";
---

<Layout>
  <UpdateTheme/>
  <Settings client:load />
  <Header cv={cv.basics} client:load />
  <Aboutme title="About me" cv={cv.basics.aboutme} />
  <Work title="Work experience" cv={cv.workExp} />
  <Knowledge title="Knowledge" cv={cv.knowledge} />
  <Projects title="Projects" data={cv.projects} />
</Layout>
