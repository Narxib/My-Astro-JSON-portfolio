---
import Layout from "../layouts/Layout.astro";
import Header from "../components/sections/Header.jsx";
import Aboutme from "@/components/Aboutme.astro";
import Work from "@/components/sections/Work.astro";
import Knowledge from "@/components/sections/Knowledge.astro";
import Projects from "@/components/Projects.astro";
import ThemeButton from "@/components/sections/ThemeButton.jsx";
import LanguageButton from "@/components/sections/LanguageButton";
import cv from "@/cv.json";
---

<Layout class="dark:bg-black">
  <ThemeButton client:only />
  <LanguageButton client:load />
  <Header cv={cv.basics} client:load />
  <Aboutme cv={cv.basics.aboutme} />
  <Work cv={cv.workExp} />
  <Knowledge cv={cv.knowledge} />
  <Projects data={cv.projects} />
</Layout>
