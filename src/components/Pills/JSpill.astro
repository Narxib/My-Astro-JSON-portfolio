---
import Pill from "../sections/Pill.astro";
import { Icon } from "astro-icon/components";

const { data } = Astro.props;
---

<Pill
  class="flex w-full md:w-24 p-2 bg-yellow-300 rounded-lg border-2 border-yellow-400 items-center justify-center text-center text-gray-800 font-bold"
  >{data}
  <Icon class="text-red-200 border-black border-1" name="jsicon" />
</Pill>
