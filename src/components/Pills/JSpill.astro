---
import Pill from "../sections/Pill.astro";
import { Icon } from "astro-icon/components";

const { data } = Astro.props;
---

<Pill
    class="flex md:w-auto w-auto p-2 gap-2 md:text-sm text-sm bg-yellow-300 rounded-lg border-2 border-yellow-400 items-center justify-center text-center text-gray-8000 font-bold"
    >{data}
    <Icon class="text-red-200 border-black border-1" name="jsicon" />
</Pill>
