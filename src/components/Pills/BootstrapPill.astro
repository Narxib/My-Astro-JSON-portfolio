---
import Pill from "../sections/Pill.astro";
import { Icon } from "astro-icon/components";

const { data } = Astro.props;
---

<Pill
    class="flex md:w-24 w-full p-2 bg-gray-900 rounded-lg border-2 border-purple-500 items-center justify-center text-center text-white font-bold"
    >{data}
    <Icon class="text-white-5 w-10 border-1" name="bootstrap" />
</Pill>
