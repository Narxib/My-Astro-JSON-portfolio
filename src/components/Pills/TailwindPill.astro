---
import Pill from "../sections/Pill.astro";
import { Icon } from "astro-icon/components";

const { data } = Astro.props;
---

<Pill
    class="flex w-auto p-2 bg-red-400 gap-2 rounded-lg border-2 border-gray-200 items-center justify-center text-center text-white font-bold"
    >{data}
    <Icon class="border-1" name="tailwind" />
</Pill>
