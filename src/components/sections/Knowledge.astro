---
import Section from "../Section.astro";
import Pill from "./Pill.astro";
import AstroPill from "../Pills/AstroPill.astro";
import NextJSPill from "../Pills/NextJSPill.astro";
import cv from "@/cv.json";
---

<Section title="Knowledge">
    <div class="flex gap-2">
        <div
            class="flex-col border-2 justify-center text-center p-2 center w-1/3 border-gray-200"
        >
            <h2 class="font-bold mb-4">Frameworks</h2>
            <div class="flex flex-wrap justify-center gap-2">
                <NextJSPill data={cv.knowledge.frameworks[0]} />
                <AstroPill data={cv.knowledge.frameworks[1]} />
                <NextJSPill data={cv.knowledge.frameworks[0]} />
                <AstroPill data={cv.knowledge.frameworks[1]} />
            </div>
        </div>
        <div class="flex-col border-2 text-center w-1/3 border-gray-200">
            <h2>Databases</h2>
            <div class="flex gap-2">
                <Pill class="bg">{cv.knowledge.frameworks[0]}</Pill>
            </div>
        </div>
        <div class="flex-col border-2 text-center w-1/3 border-gray-200">
            <h2>Languages</h2>
            <div class="flex gap-2">
                <Pill class="bg">{cv.knowledge.langs}</Pill>
            </div>
        </div>
    </div>
</Section>
